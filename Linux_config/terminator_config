# terminator 终端终结者美化配置
# 安装命令 ：sudo apt install terminator
# 配置文件路径 ：gedit ~/.config/terminator/config

[global_config]
  geometry_hinting = True
  scroll_tabbar = True
  title_hide_sizetext = True
  title_transmit_bg_color = "#c80029"
  inactive_color_offset = 0.68
  suppress_multiple_term_dialog = True
  title_use_system_font = False
  title_font = Ubuntu Mono 17
[keybindings]
[profiles]
  [[default]]
    icon_bell = False
    background_color = "#2d2d2d"
    background_darkness = 0.95
    background_type = transparent
    cursor_shape = ibeam
    cursor_color = "#eee9e9"
    font = Ubuntu Mono 17
    foreground_color = "#eee9e9"
    show_titlebar = False
    scrollbar_position = hidden
    scrollback_lines = 5000
    scrollback_infinite = True
    use_system_font = False
    copy_on_selection = True
[layouts]
  [[default]]
    [[[child0]]]
      fullscreen = False
      last_active_term = 8175ace0-311b-41d7-9bda-d166a4987254
      last_active_window = True
      maximised = False
      order = 0
      parent = ""
      position = 200:200
      size = 1100, 650
      type = Window
    [[[terminal1]]]
      order = 0
      parent = child0
      profile = default
      type = Terminal
      uuid = 8175ace0-311b-41d7-9bda-d166a4987254
[plugins]





